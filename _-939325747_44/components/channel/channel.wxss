@import "../../__wuBaseWxss__/0.wxss";

.header {
    width: 100%;
    height: 88rpx;
}

.scrollBar {
    width: 100%;
    height: 88rpx;
}

.channel-lists {
    width: 100%;
}

.channel-item {
    width: 100%;
    height: 188rpx;
    border-bottom: 1rpx solid #E7E7E7;
}

.read-more {
    color: #C0C0C0;
    font-size: 28rpx;
    height: 88rpx;
    width: 100%;
    line-height: 88rpx;
    text-align: center;
    margin-bottom: 88rpx;
}

.channel-img {
    width: 234rpx;
    height: 146rpx;
    border-radius: 4px;
    position: relative;
    margin-left: 24rpx;
    margin-top: 20rpx;
    float: left;
    background-repeat: no-repeat;
}

.channel-infos {
    margin-right: 24rpx;
    width: 466rpx;
    height: 146rpx;
    margin-top: 20rpx;
    float: right;
    position: relative;
}

.channel-time {
    width: 60rpx;
    height: 28rpx;
    background: rgba(0,0,0,0.40);
    border-radius: 2px;
    font-size: 10px;
    color: #FFFFFF;
    letter-spacing: 0;
    text-align: center;
    position: absolute;
    bottom: 14rpx;
    right: 14rpx;
}

.channel-title {
    margin-left: 20rpx;
    width: 446rpx;
    font-size: 28rpx;
    color: #212121;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    line-height: 34rpx;
}

.channel-page {
    margin-top: 10rpx;
}

.channel-up,.channel-view,.channel-favorites {
    font-size: 24rpx;
    color: #999999;
    vertical-align: middle;
}

.channel-up {
    width: 380rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    display: inline-block;
}

.channel-type {
    font-size: 24rpx;
    color: #999;
    margin-top: 26rpx;
}

.icon {
    color: #999999;
    vertical-align: middle;
}

.channel-card {
    height: 30rpx;
    line-height: 30rpx;
    position: absolute;
    left: 20rpx;
    bottom: 40rpx;
}

.General_barragenumb {
    margin-left: 40rpx;
}

.info-stat {
    width: 360rpx;
    height: 30rpx;
    line-height: 30rpx;
    position: absolute;
    bottom: 0;
    left: 20rpx;
}